    name = "test",
    srcs = glob(["*Test.cpp"]),
    deps = [
        ":test_lib",
        "@/eden/fs/utils:utils",
        "@/folly/experimental:test_util",
    ],
    external_deps = [
        ("googletest", None, "gmock"),
        ("googletest", None, "gtest"),
    ],
)

