cpp_unittest(
  name = 'test',
  srcs = glob(['*Test.cpp']),
  deps = [
    ':test_lib',
    '@/eden/utils:utils',
    '@/folly/experimental:test_util',
  ],
  external_deps = [
    'gtest',
  ],
)

cpp_library(
  name = 'test_lib',
  headers = glob(['*.h']),
  srcs = glob(['*.cpp'], excludes=['*Test.cpp']),
  deps = [
    '@/folly:conv',
    '@/folly:exception_string',
  ],
  external_deps = [
    'gtest',
  ],
)
